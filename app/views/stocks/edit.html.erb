<%= stylesheet_link_tag 'stocks', media: 'all', 'data-turbo-track': 'reload' %>
<h1>在庫を編集</h1>

<div class="edit-stock-container">
  <%= form_with(model: [@room, @stock], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :product_name, "商品名" %>
      <%= form.text_field :product_name, value: @stock.product_name, placeholder: "例: りんご", required: true %>
    </div>
    <div class="form-group">
      <%= form.label :quantity, "数量" %>
      <%= form.number_field :quantity, value: @stock.quantity, required: true %>
    </div>
    <div class="form-group">
      <%= form.label :image, "画像" %>
      <%= form.file_field :image %>
    </div>
    <%= form.submit '更新', class: 'btn btn-primary' %>
  <% end %>

  <div class="delete-stock">
    <%= button_to '削除', [@room, @stock], method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
  </div>

  <%= link_to 'ルームに戻る', room_path(@room), class: 'btn btn-secondary' %>
</div>