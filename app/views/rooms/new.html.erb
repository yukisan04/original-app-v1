<%= stylesheet_link_tag 'rooms2', media: 'all', 'data-turbo-track': 'reload' %>
<div class="stock-controls" style="text-align: center;">
<h1>新しいルームを作成</h1>

<% if @room.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@room.errors.count, "エラー") %>が発生しました:</h2>
    <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @room, local: true do |form| %>
  <div>
    <%= form.label :name, 'ルーム名' %>
    <%= form.text_field :name, required: true %>
  </div>
  <div>
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password, required: true %>
  </div>
  <div>
    <%= form.submit '作成' %>
  </div>
<% end %>
</div>

<footer>
    <p>&copy; 2024 在庫ポケット</p>
</footer>