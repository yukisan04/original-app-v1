<%= stylesheet_link_tag 'devise', media: 'all', 'data-turbo-track': 'reload' %>
<h2 class="form-title">アカウント編集ページ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ニックネーム", class: 'label' %>
    <%= f.text_field :nickname, class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="warning-message">現在、確認待ちのメール: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "新しいパスワード", class: 'label' %> <i>(変更しない場合は空白のままで)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: 'input-field' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上が必要です</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認", class: 'label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード", class: 'label' %> <i>(変更を確認するために必要です)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'input-field' %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: 'submit-button' %>
  </div>
<% end %>

<%= link_to 'トップページに戻る', root_path, class: 'back-button' %>
<h3 class="delete-account-title">↓アカウントを削除する↓</h3>

<%= button_to "アカウントを削除", registration_path(resource_name), method: :delete, class: 'cancel-button', data: { confirm: "本当にアカウントを削除しますか？この操作は元に戻せません。" } %>
