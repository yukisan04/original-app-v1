<h2>更新情報の編集</h2>

<%= form_with model: @updater, local: true do |form| %>
  <div>
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, '内容' %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit '更新する' %>
  </div>
<% end %>
<%= link_to '戻る', updaters_path %>
