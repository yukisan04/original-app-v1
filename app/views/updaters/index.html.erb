<h1>更新情報一覧</h1>
<% @updaters.each do |updater| %>
  <div class="updater-item">
    <h2><%= updater.title %></h2>
    <p><%= updater.content %></p>
    <p><small><%= updater.created_at.strftime("%Y-%m-%d %H:%M") %></small></p>
    <% if current_user&.admin? %>
      <%= link_to '更新情報を修正', edit_updater_path(updater), class: 'button contact2' %>
    <% end %>
  </div>
<% end %>

<!-- 右下に固定するボタン -->
<% if current_user&.admin? %>
  <%= link_to '更新情報を追加', new_updater_path, class: 'fixed-add-button' %>
<% end %>

  <footer>
    <p>&copy; 2024 在庫ポケット</p>
    <style>
      /* フッターのスタイル */
      footer {
        text-align: center;
        margin-top: 20px;
        color: #666;
      }
    </style>
  </footer>