<%= stylesheet_link_tag 'reset', media: 'all', 'data-turbo-track': 'reload' %>
<div class="stock-controls" style="text-align: center;">
<div class="header">
  <div class="header-buttons" style="position: absolute; top: 10px; right: 10px; z-index: 10;">
    <% if user_signed_in? %>
      <%= link_to 'トップページに戻る', root_path, class: 'btn btn-warning' %>
    <% end %>
  </div>
</div>

<h1>パスワードリセット</h1>

<%= form_with url: password_resets_path, local: true do |form| %>
  <div class="field">
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email, required: true, placeholder: '登録したメールアドレスを入力してください' %>
  </div>

  <div class="actions">
    <%= form.submit 'パスワードリセットリンクを送信', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>