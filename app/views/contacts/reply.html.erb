<%= stylesheet_link_tag 'contacts1', media: 'all', 'data-turbo-track': 'reload' %>
<h1 class="reply-form-title">返信フォーム</h1>

<%= form_with(model: @reply, url: create_reply_contact_path(@contact), html: { class: 'reply-form' }) do |form| %>
  <div class="form-group">
    <%= form.label :content, "返信内容", class: 'form-label' %>
    <%= form.text_area :content, rows: 5, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= form.submit "返信する", class: 'btn btn-submit' %>
  </div>
<% end %>
