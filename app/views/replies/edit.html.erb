<%= form_with(model: [@contact, @reply], local: true) do |form| %>
  <div class="field">
    <%= form.label :content, "編集内容" %>
    <%= form.text_area :content, rows: 4, placeholder: "返信内容を入力..." %>
  </div>
  <div class="actions">
    <%= form.submit '更新する', class: 'btn btn-update' %>
  </div>
<% end %>