<%= stylesheet_link_tag 'contacts2', media: 'all', 'data-turbo-track': 'reload' %>
<% if @reply.present? %>
  <div class="reply-section">
    <p class="user-info"><strong>返信者:</strong> <%= @reply.user.nickname %></p>
    <%= form_with(model: @reply, url: contact_reply_path(@contact, @reply), method: :patch, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :content, '返信内容' %>
        <%= form.text_area :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit '返信を更新', class: 'btn btn-warning' %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>返信はまだありません。</p>
<% end %>

<%= link_to '戻る', @contact, class: 'btn btn-primary' %>
